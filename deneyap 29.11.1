#include <iostream>
using namespace std;

int main()
{
    float dizi[] = {19.23,26.43,14.72,28.71,15.04,10.06,22.96};
    int i,konum,el_sayisi;
    float minimum;

    el_sayisi = 7;
    minimum = dizi[0];

    for(i=0;i<el_sayisi;i++)
    {
        if(dizi[i] < minimum)
        {
            minimum = dizi[i];
            konum = i;
        }

    }

    cout<<"En kucuk eleman = "<<minimum<<" ve indis numarasi = "<<konum;

    return 0;
}
