#include <iostream>
using namespace std;

int main() {
    char islem;
    double sayi1, sayi2;

    cout << "Ilk sayiyi girin: ";
    cin >> sayi1;

    cout << "Ikinci sayiyi girin: ";
    cin >> sayi2;

    cout << "Islemi secin (+, -, *, /): ";
    cin >> islem;

    switch(islem) {
        case '+':
            cout << sayi1 << " + " << sayi2 << " = " << sayi1 + sayi2;
            break;
        case '-':
            cout << sayi1 << " - " << sayi2 << " = " << sayi1 - sayi2;
            break;
        case '*':
            cout << sayi1 << " * " << sayi2 << " = " << sayi1 * sayi2;
            break;
        case '/':
            if(sayi2 != 0)
                cout << sayi1 << " / " << sayi2 << " = " << sayi1 / sayi2;
            else
                cout << "Sifira bolme hatasi!";
            break;
        default:
            cout << "Gecersiz islem!";
            break;
    }

    return 0;
}
